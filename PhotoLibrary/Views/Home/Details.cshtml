@model PhotoLibrary.Models.DetailsVM

@{
    ViewData["Title"] = "Details";
}
<div class="flex justify-start">
    <h1 class="mb-10 ml-10">Album Id: @Html.DisplayFor(modelItem => Model.albumID)</h1>
</div>
<div class="flex flex-col justify-center items-center">
        @foreach (var item in Model.photos)
        {
        <div class="w-screen m-10 flex flex-col items-center border-b-2 border-white justify-center">
            <div class="flex mb-10">
                <h1 class="grid grid-cols-1">
                    @Html.DisplayFor(modelItem => item.Id): &nbsp;
                </h1>
                <h1 class="grid grid-cols-1">
                    @Html.DisplayFor(modelItem => item.Title)
                </h1>
            </div>
            <img src="@Html.DisplayFor(modelItem => item.Url)" class="w-3/5 rounded-md mb-20 max-w-lg">
        </div>
}
</div>
    
