<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Photo Library</title>
    <link href="https://unpkg.com/tailwindcss@2/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
</head>
<body class="bg-gray-800 text-center text-white">
    <header class="mt-10">
        <nav>
            <div class="flex flex-col">
                <div class="flex justify-start">
                <a class="nav-link text-blue-500 ml-20 text-xl" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </div>
                <div class="flex justify-center"><h1 class="text-white text-xl text-center"> Photo Library</h1></div>
            </div>
        </nav>
    </header>
    <div class="m-10 mt-20">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
